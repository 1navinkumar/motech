<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/mdsContext.xml"/>

    <osgi:reference id="configurationServiceOsgi" interface="org.motechproject.config.service.ConfigurationService"/>

    <osgi:reference id="motechSchedulerServiceOSGi" interface="org.motechproject.scheduler.MotechSchedulerService"/>

    <osgi:reference id="eventRelay" interface="org.motechproject.event.listener.EventRelay"/>

    <osgi:reference id="sqlDbManager" interface="org.motechproject.commons.sql.service.SqlDBManager" bean-name="sqlDbManager"/>

    <osgi:reference id="packageAdmin" interface="org.osgi.service.packageadmin.PackageAdmin"/>

    <osgi:reference id="historyServiceOSGi" interface="org.motechproject.mds.service.HistoryService" availability="optional"/>

    <osgi:reference id="trashServiceOSGi" interface="org.motechproject.mds.service.TrashService" availability="optional"/>

    <!-- Weaves the classes for Developer Defined Entities, has to be registered as a service -->
    <osgi:service ref="mdsWeavingHook" interface="org.osgi.framework.hooks.weaving.WeavingHook"/>

    <osgi:service ref="entityServiceImpl" interface="org.motechproject.mds.service.EntityService"/>

    <osgi:service id="mdsDataProviderOsgi" auto-export="interfaces" ref="mdsDataProvider"
                    interface="org.motechproject.commons.api.DataProvider"/>

</beans>
