<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <bean id="bundleContext" class="org.eclipse.gemini.blueprint.mock.MockBundleContext"/>

    <bean id="eventAdmin" class="org.motechproject.server.mock.MockEventAdmin"/>

    <bean id="settingsFacade" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="platform-server-bundle"/>
    </bean>

</beans>