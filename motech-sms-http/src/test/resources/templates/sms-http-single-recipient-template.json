{
    "outgoing":{
        "request":{
            "urlPath":"http://smshost.com/sms/send",
            "type":"GET",
            "recipientsSeparator":"+",
            "multiRecipientSupported": "false",
            "queryParameters":{
                "recipients":"$recipients",
                "message":"$message"
            },
            "authentication":{
                "username":"username",
                "password":"password"
            }
        },
        "response":{
            "success":"<status>success</status>"
        }
    },
    "incoming":{
        "messageKey":"message",
        "senderKey":"sender",
        "timestampKey":"sent_at"
    }
}
