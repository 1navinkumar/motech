<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.tasks"/>

    <!-- ================ -->
    <!--   DB CONNECTORS  -->
    <!-- ================ -->

    <bean id="tasksSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="tasks"/>
    </bean>

    <bean id="channelDbConnector" factory-bean="tasksSettings" factory-method="getConnector">
        <constructor-arg value="motech-channel"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <bean id="taskDbConnector" factory-bean="tasksSettings" factory-method="getConnector">
        <constructor-arg value="motech-tasks"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <!-- ======================================= -->
    <!--   EVENT ANNOTATION BEAN POST PROCESSOR  -->
    <!-- ======================================= -->

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

    <!-- ================== -->
    <!-- MODULE REPOSITORY  -->
    <!-- ================== -->

    <bean id="allChannels" class="org.motechproject.tasks.repository.AllChannels">
        <constructor-arg ref="channelDbConnector"/>
    </bean>

    <bean id="allTasks" class="org.motechproject.tasks.repository.AllTasks">
        <constructor-arg ref="taskDbConnector"/>
    </bean>

</beans>