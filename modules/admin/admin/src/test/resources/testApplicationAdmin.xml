<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    
    <context:annotation-config/>

    <bean id="allLogMappings" class="org.motechproject.admin.repository.AllLogMappings"/>

    <bean id="allNotificationRules" class="org.motechproject.admin.repository.AllNotificationRules"/>

    <bean id="couchDbManager" class="org.motechproject.commons.couchdb.service.impl.CouchDbManagerImpl"/>

    <bean id="allStatusMessages" class="org.motechproject.admin.repository.AllStatusMessages"/>

    <bean id="adminDbConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-admin"/>
    </bean>

</beans>