<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <osgi:service ref="eventLoggingServiceManagerImpl"
                  interface="org.motechproject.eventlogging.service.EventLoggingServiceManager"/>

    <osgi:reference id="platformSettingsService" interface="org.motechproject.server.config.service.PlatformSettingsService" />

    <osgi:reference id="eventListenerRegistryService" interface="org.motechproject.event.listener.EventListenerRegistryService"/>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor" >
        <property name="eventListenerRegistry" ref="eventListenerRegistryService"/>
    </bean>

</beans>
